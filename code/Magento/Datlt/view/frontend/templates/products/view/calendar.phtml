<div class="product-option-delivery-date">
    <label>Date of delivery: </label>
    <input type="text" class="input-text" id="delivery-date" style="width: auto" name="delivery-date"/>
</div>
<script>
    require([
        'jquery',
        'mage/translate',
        'mage/calendar'
    ], function ($, $t) {
        $('#delivery-date').calendar({
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            currentText: $t('Today'),
            closeText: $t('Close'),
            showWeek: true
        });
    })
</script>
